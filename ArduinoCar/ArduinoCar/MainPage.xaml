<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArduinoCar.MainPage">

    <VerticalStackLayout Spacing="30" Padding="30" HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Arduino Car Control" FontSize="30" HorizontalOptions="Center"/>
        <Grid RowDefinitions="*,*" ColumnDefinitions="Auto,Auto" HorizontalOptions="Center">
            <Label Text="Linke Kette" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center"/>
            <Label Text="Rechte Kette" Grid.Row="0" Grid.Column="1" HorizontalOptions="Center"/>

            <ProgressBar x:Name="leftBar" Grid.Row="1" Grid.Column="0" WidthRequest="20" HeightRequest="5"/>
            <ProgressBar x:Name="rightBar" Grid.Row="1" Grid.Column="1" WidthRequest="20" HeightRequest="5"/>
        </Grid> 
    </VerticalStackLayout>

</ContentPage>
