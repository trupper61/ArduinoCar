<Window x:Class="ArduinoCar2.StateEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduinoCar2"
        mc:Ignorable="d"
        Title="Zustand bearbeiten" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Aktion:"/>
        <ComboBox x:Name="actionBox">
            <ComboBoxItem Content="Geradeaus fahren"/>
            <ComboBoxItem Content="Rückwärts fahren"/>
            <ComboBoxItem Content="Drehen links"/>
            <ComboBoxItem Content="Drehen rechts"/>
            <ComboBoxItem Content="Stop"/>
        </ComboBox>
        <TextBlock Text="Wert:" Margin="0 10 0 0"/>
        <TextBlock x:Name="valueBox"/>
        <TextBlock Text="Einheit:" Margin="0,10,0,0"/>
        <ComboBox x:Name="unitBox">
            <ComboBoxItem Tag="Seconds">Sekunden</ComboBoxItem>
            <ComboBoxItem Tag="Decimeters">dm</ComboBoxItem>
        </ComboBox>
        <Button Content="OK" Margin="0 20 0 0 " Click="Save_Click"/>
    </StackPanel>
</Window>
